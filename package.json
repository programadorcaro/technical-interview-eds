{
  "name": "typescript-html-project",
  "version": "1.0.0",
  "description": "Basic TypeScript HTML project",
  "scripts": {
    "build": "esbuild src/**/*.ts --bundle --outdir=src --outbase=src --format=esm",
    "watch": "esbuild src/**/*.ts --bundle --outdir=src --outbase=src --format=esm --watch",
    "serve": "http-server src -p 8080 -c-1"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "http-server": "^14.1.1",
    "esbuild": "^0.20.2"
  }
}
